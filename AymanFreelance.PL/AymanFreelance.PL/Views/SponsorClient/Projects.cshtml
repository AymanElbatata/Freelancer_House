@model AymanFreelance.PL.Models.Search_VM

@{
    ViewData["Title"] = "Projects";
}

<style>
    .project-card {
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.15);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        background: #fff;
    }

        .project-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.25);
        }

    .project-image {
        height: 200px;
        object-fit: cover;
        width: 100%;
    }

    .card-body h5 {
        font-weight: 600;
        margin-bottom: 10px;
    }

    .card-body p {
        margin-bottom: 5px;
        font-size: 0.95rem;
        color: #555;
    }

    .btn-primary {
        border-radius: 8px;
        padding: 6px 14px;
        font-size: 0.9rem;
    }
</style>

<div class="container mt-4">
    @if (Model.ProjectTBL_VM.Count() > 0)
    {
        <div class="row">
            @foreach (var project in Model.ProjectTBL_VM)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card project-card h-100">
                        <img src="@project.Image" class="project-image" alt="@project.Name" />
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@project.Name</h5>
                            <p class="card-text"><strong>Code:</strong> @project.HashCode</p>
                            <p class="card-text"><strong>Client:</strong> @project.ProjectOwnerTBL.UserName</p>
                            <p class="card-text"><strong>Freelancer:</strong> @(project.ProjectFreelancerTBL?.UserName ?? "Not assigned")</p>
                            <div class="mt-auto">
                                <a asp-controller="SponsorClient" asp-action="UpdateProject" asp-route-ProjectId="@project.ID" class="btn btn-primary w-100">Update</a>
                                <a asp-controller="SponsorClient" asp-action="ManageProject" asp-route-ProjectId="@project.ID" class="mt-3 mb-2 btn btn-warning w-100">Manage</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <h2 class="text-center text-muted my-5">There are No Projects...</h2>
    }
</div>