@{
    ViewData["Title"] = "About Us";
}

<section class="about-section" style="background: linear-gradient(to right, #f5f7fa, #c3cfe2); padding: 60px 0;">
    <div class="container" style="max-width: 1100px; margin: auto; text-align: center;">

        <!-- Title -->
@*         <h1 style="font-size: 42px; font-weight: bold; color: #333; margin-bottom: 20px;">
            About Us
